<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieUsageDataAccess"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/usage_data_access"/>

    <TextView
        android:id="@+id/tvTitleUsageDataAccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="@string/dialog_title_usage_data_access"
        android:textColor="#263238"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/lottieUsageDataAccess"/>

    <TextView
        android:id="@+id/tvMessageUsageDataAccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="@string/dialog_description_usage_data_access_permission"
        android:textColor="#263238"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleUsageDataAccess"/>

    <TextView
        android:id="@+id/btnCancelUsageDataAccess"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_background_btn_cancel"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/text_cancel"
        android:textAllCaps="false"
        android:textColor="#4464ed"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnGotoSettingUsageDataAccess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMessageUsageDataAccess"
        app:layout_constraintWidth_percent="0.4"/>

    <TextView
        android:id="@+id/btnGotoSettingUsageDataAccess"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_background_dialog_detail"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/text_go_to_setting"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCancelUsageDataAccess"
        app:layout_constraintTop_toBottomOf="@id/tvMessageUsageDataAccess"
        app:layout_constraintWidth_percent="0.4"/>
</androidx.constraintlayout.widget.ConstraintLayout>