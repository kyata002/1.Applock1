<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_change_email">

    <TextView
        android:id="@+id/tvTitleCustomizeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/title_customize_time"
        android:textColor="#263238"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageCloseCustomizeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleCustomizeTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleCustomizeTime"
        app:srcCompat="@drawable/ic_close_customize_time"/>

    <TextView
        android:id="@+id/tvDefaultSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="@string/text_default_setting"
        android:textColor="#263238"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleCustomizeTime"/>

    <TextView
        android:id="@+id/tvNotification1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/text_recommend_lock_full_time"
        android:textColor="#7f85a2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvDefaultSetting"
        app:layout_constraintTop_toBottomOf="@id/tvDefaultSetting"/>

    <TextView
        android:id="@+id/tvNotification2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_turn_off_to_customize"
        android:textColor="#7f85a2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvNotification1"
        app:layout_constraintTop_toBottomOf="@id/tvNotification1"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchDefaultSetting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_switch_compat"
        android:padding="20dp"
        android:thumb="@null"
        app:layout_constraintBottom_toBottomOf="@id/tvNotification2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvDefaultSetting"
        app:track="@null"/>

    <View
        android:id="@+id/viewLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#cccccc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNotification2"
        app:layout_constraintWidth_percent="0.9"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsTime"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvDefaultSetting"
        app:layout_constraintTop_toBottomOf="@id/viewLine">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/tvSetTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/text_set_timer"
                android:textColor="#263238"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingBottom="10dp"
                android:text="@string/text_start"
                android:textColor="#263238"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/tvSetTimer"
                app:layout_constraintTop_toBottomOf="@id/tvSetTimer"/>

            <TextView
                android:id="@+id/tvTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:drawableEnd="@drawable/selector_more_customize_time"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textColor="#263238"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tvStart"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.mtg.applock.ui.view.time.TimeSelectedView
                android:id="@+id/timeSelectedStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/tvStart"/>

            <TextView
                android:id="@+id/tvEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingBottom="10dp"
                android:text="@string/text_end"
                android:textColor="#263238"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/tvStart"
                app:layout_constraintTop_toBottomOf="@id/timeSelectedStart"/>

            <com.mtg.applock.ui.view.time.TimeSelectedView
                android:id="@+id/timeSelectedEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvEnd"/>

            <TextView
                android:id="@+id/tvTimeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:drawableEnd="@drawable/selector_more_customize_time"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textColor="#263238"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tvEnd"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvEvery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/text_every"
                android:textColor="#263238"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tvEnd"
                app:layout_constraintTop_toBottomOf="@id/timeSelectedEnd"/>

            <com.mtg.applock.ui.view.time.EveryTimeView
                android:id="@+id/everyTimeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEvery"/>

            <View
                android:id="@+id/viewEnable"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#B3FFFFFF"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/btnSaveCustomizeTime"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_background_dialog_detail"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/text_save"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nsTime"
        app:layout_constraintWidth_percent="0.7"/>
</androidx.constraintlayout.widget.ConstraintLayout>